{
  "typescript": true,
  "commands": [
    "@adonisjs/core/build/commands",
    "@adonisjs/lucid/build/commands"
  ],
  "exceptionHandlerNamespace": "App/Exceptions/GlobalHandler",
  "aliases": {
    "App": "app",
    "Contracts": "contracts",
    "Config": "config",
    "Database": "database"
  },
  "preloads": [
    "./start/routes",
    "./start/kernel"
  ],
  "providers": [
    "./providers/AppProvider",
    "@adonisjs/core",
    "@adonisjs/session",
    "@adonisjs/view",
    "@adonisjs/lucid"
  ],
  "metaFiles": [
    ".env",
    ".adonisrc.json",
    "resources/views/**/*.edge",
    "public/**"
  ]
}
